<?xml version="1.0" encoding="UTF-8"?><!DOCTYPE hibernate-mapping PUBLIC "-//Hibernate/Hibernate Mapping DTD 3.0//EN""http://hibernate.sourceforge.net/hibernate-mapping-3.0.dtd"><hibernate-mapping package="com.xuyuan.hibernate3.tutorial.domain">	<class name="Event" table="EVENTS">        <id name="id" column="EVENT_ID">            <generator class="native"/>        </id>        <property name="date" type="timestamp" column="EVENT_DATE"/>        <property name="title"/>                <!-- inverse属性定义了关系的反转，即维护关系交给了Person -->        <set name="participants" table="PERSON_EVENT" inverse="true">            <key column="EVENT_ID"/>            <many-to-many column="PERSON_ID" class="Person"/>        </set>    </class></hibernate-mapping>